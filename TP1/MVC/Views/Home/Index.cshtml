@using MVC.Models
@model HomeViewModel

@{
    ViewBag.Title = "Accueil";
}

<h1>Bienvenue sur le site web de l'Université !</h1>
<hr />
<h3>Les meilleurs élèves</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Date de naissance</th>
            <th scope="col">Moyenne des notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eleve in Model.ElevesBest)
        {
        <tr>
            <th scope="row">@eleve.Id</th>
            <td>@eleve.Nom</td>
            <td>@eleve.Prenom</td>
            <td>@eleve.DateDeNaissance.ToString("dd/MM/yyyy")</td>
            <td>@eleve.MoyenneNotes</td>
        </tr>
        }
    </tbody>
</table>

<hr class="my-3" />

<h3>Les élèves les plus absents</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Date de naissance</th>
            <th scope="col">Nombre d'absences</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eleve in Model.ElevesOff)
        {
        <tr>
            <th scope="row">@eleve.Id</th>
            <td>@eleve.Nom</td>
            <td>@eleve.Prenom</td>
            <td>@eleve.DateDeNaissance.ToString("dd/MM/yyyy")</td>
            <td>@eleve.Absences.Count</td>
        </tr>
        }
    </tbody>
</table>